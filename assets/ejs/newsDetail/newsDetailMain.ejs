<div class="news-detail clearfix" data-info="<%= JSON.stringify({id: newsData.current.id, tags: newsData.current.tags, createdBy: newsData.current.createdBy})%>">
    <div class="ad-top">
    </div>
    <div class="news-detail-con simditor">
        <div class="news-detail-wrap clearfix">
            <div class="text-header">
                <h6 style="text-align: <%= newsData.current.title.length > 28 ? 'left' : 'center' %>;">
                    <%= !newsData.current || !newsData.current.title ? '' : newsData.current.title %>
                </h6>
                <div class="issue-box"><p class="author"><span><%= newsData.current.author %></span></p>
                    <p class="time">发布时间：<span>
                            <%
                            const format = (date, str) => {
                                let _str = !str ? '-' : str
                                const zero = (m) => {
                                    return m < 10 ? '0' + m : m
                                }
                                let time = new Date(date)
                                let y = time.getFullYear()
                                let m = time.getMonth() + 1
                                let d = time.getDate()
                                if (date) {
                                    return y + _str + zero(m) + _str + zero(d)
                                } else {
                                    return ''
                                }
                            }
                            %>
                            <%= format(newsData.current. createTime)%>
                        </span></p>
                    <p class="keyword">关键字：<span><%= newsData.current.tags %></span></p>
                    <p data-ifCollect="<%= newsData.ifCollect %>" class="collect">
                    <% if(newsData.ifCollect === 1){ %>
                    <i class="iconfont hasCollect">&#xe605;</i>
                    <span> 已收藏</span>
                    <% } else { %>
                        <i class="iconfont">&#xe651;</i>
                        <span> 收藏</span>
                    <% } %>
                    </p>
                    <p class="read-numbner"><span><%= newsData.current.hotCounts %></span></p>
                </div>
            </div>
            <div class="details-synopsis active" id="detailsSynopsis">
                <p><%= newsData.current.synopsis %></p>
            </div>
            <!-- 音频播放 -->
            @@include('./audio.ejs')
            <!-- 视频播放 -->
            <%
            var videoData = newsData.current.video
                if (!!videoData) {
                    videoData = JSON.parse(videoData)
                    if (videoData.length > 0) {
            %>
            <div>
                <div class="detail-video-wraper" style="width: 640px; height: 360px;">
                    <video src="<%= videoData[0].fileUrl %>" preload="auto" controls="" style="width: 100%; height: 100%;"></video>
                </div>
            </div>
            <%
                    }
                }
            %>
            <!-- 新闻内容 -->
            <div class="detail-text-cont simditor-body">
                <%- newsData.current.content %>
            </div>
            <!-- 本文来源 -->
            <div class="source">
                <div class="source-text">
                    <p>本文来源： <span><%= newsData.current.source %></span></p>
                    <p><span><%= newsData.current.author %></span></p>
                </div>
                <div class="share" style="display: none;">
                    <span>分享：</span>
                    <a class="twitter" style="display: none;">
                        <img src="../img/newsDetail/twitter.png">
                    </a>
                    <a class="facebook" style="display: none;">
                        <img src="../img/newsDetail/facebook.png">
                    </a>
                    <a class="sian">
                        <img src="../img/newsDetail/sina.png">
                    </a>
                    <a class="wx">
                        <img src="../img/newsDetail/wx.png">
                    </a>
                </div>
            </div>
            <!-- 底部广告 -->
            <div class="ad-bottom"></div>
            <!-- 底部相关新闻 -->
            <div class="bottom-recommend-news">
                <div class="recommend-title">相关新闻</div>
                <div class="news-contain"></div>
            </div>
            <!-- 底部作者介绍 -->
            <div class="authorinfo-bottom"></div>
            <!-- 评论 -->
            <div id="replyBox">
            </div>
        </div>
    </div>
    <!-- 右侧作者介绍 -->
    <div class="authorinfo"></div>
    <!-- 右侧行情 -->
    <div class="market"></div>
    <!-- 右侧相关新闻 -->
    <div class="ad-recomend">
        <div class="aside-section">
            <div class="aside-title-name clearfix"><span class="aside-title-title">相关新闻</span></div>
            <div class="aside-title">
                <div class="aside-title-con">
                    <div class="news-recommend clearfix" style="width: 288px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 右侧广告 -->
    <div class="ad-show">
    </div>
</div>
