<!-- 热门专题 -->
<div class="index-news-center">
    <div class="subject-h5">热门专题</div>
    <div class="subject-tab clearfix">
        <%
        data.adAndColumn.map((d) => {
            d.hotColumnGroup.map((item) => {
        %>
        <div class="subject-box clearfix">
            <div class="subject-first">
                <%
                    let aUrl = !item.topic.typeLink ? `/hot?tags=${encodeURIComponent(!item.topic.tags ? '区块链' : item.topic.tags)}&id=${item.topic.id}` : item.topic.typeLink
                %>
                <a target="_blank"  href="<%= aUrl %>">
                    <img src="<%= item.topic.pcImgSrc %>" alt="">
                </a>
            </div>
            <div class="subject-ul clearfix">
                <%
                    let iteList = item.contentList.slice(0, 3)
                iteList.map((cItem) => {
                %>
                <li class="clearfix">
                    <span></span>
                    <a href="<%= cItem.url %>" target="_blank">
                        <%= cItem.title %>
                    </a>
                </li>
                <%
                })
                %>
            </div>
        </div>
        <%
            })
        %>
        <%
        if (d.ad.length > 0) {
            d.ad.map((item) => {
        %>
        <div class="news-img clearfix">
            <a href="<%= item.url %>" target="_blank" style="width: 100%; height: 100%;">
                <img src="<%= item.img_url %>" alt="">
                <span class="<%= `${item.useType === 1 ? 'active' : ''}` %>"></span>
            </a>
        </div>
        <%
            })
        }
         %>
        <%
        })
        %>
    </div>
    <div class="news-center-img clearfix">
        <div class="news-img clearfix">
            <%
            if (data.adData[4].length > 0) {
            data.adData[4].map((item) => {%>
            <a href="<%= item.url %>" target="_blank" style="width: 100%; height: 100%;">
                <img src="<%= item.img_url %>" alt="">
                <span class="<%= `${item.useType === 1 ? 'active' : ''}` %>"></span>
            </a>
            <%})
            }
            %>
        </div>
    </div>
</div>